@model IEnumerable<digioz.Portal.Domain.DomainModel.MailingListCampaign>
@using digioz.Portal.Web.Extensions
@{
    ViewBag.Title = "Campaign Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Campaign Index</h2>

<p>
    <div class="btn btn-default">@Html.ActionLink("Create New", "Create")</div>
    <div class="btn btn-default">@Html.ActionLink("Mailing List Menu", "Index", "MailingListManager")</div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FromName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromEmail)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Banner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.VisitorCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.FromName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromEmail)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Banner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.VisitorCount)
        </td>
        <td>
            @Html.Raw(
                Html.ActionImage("Details", new { id = item.ID }, "~/Content/images/icons/16x16/Search.png", imageAttributes: new { alt = "Details", @class = "icon" },
                linkAttributes: new { title = "Details" }).ToString() + " " +
                Html.ActionImage("Edit", new { id = item.ID }, "~/Content/images/icons/16x16/Edit.png", imageAttributes: new { alt = "Edit", @class = "icon" },
                linkAttributes: new { title = "Edit" }).ToString() + " " +
                Html.ActionImage("Delete", new { id = item.ID }, "~/Content/images/icons/16x16/Cancel.png", imageAttributes: new { alt = "Delete", @class = "icon" },
                linkAttributes: new { title = "Delete" }).ToString()
            )
        </td>
    </tr>
}

</table>
