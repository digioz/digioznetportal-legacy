@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@using digioz.Portal.Web.Extensions
@{
    ViewBag.Title = "Roles List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <div class="btn btn-default">@Html.ActionLink("Create New Role", "Create")</div>
    <div class="btn btn-default">@Html.ActionLink("Manage User Role", "ManageUserRoles")</div>
</p>
<table class="table">
    <tr>
        <th>
            Role Name
        </th>
        <th></th>
    </tr>

    @foreach (var role in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
            <td style="width:100px;">
                @Html.Raw(
          Html.ActionImage("Edit", new { RoleName = role.Name }, "~/Content/images/icons/16x16/Edit.png", imageAttributes: new { alt = "Edit", @class = "icon" },
                linkAttributes: new { title = "Edit" }).ToString() + " " +
          Html.ActionImage("Delete", new { RoleName = role.Name }, "~/Content/images/icons/16x16/Cancel.png", imageAttributes: new { alt = "Delete", @class = "icon" },
                linkAttributes: new { title = "Delete", onclick = "return confirm('Are you sure you wish to delete this Department?')" }).ToString()
            )

            </td>
        </tr>
    }

</table>