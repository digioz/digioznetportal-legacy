@model digioz.Portal.Web.Areas.Forum.ViewModels.ReportMemberViewModel

@{
    ViewBag.Title = string.Concat(Html.LanguageString("Report.Report"), Model.Username);
}

@section Header
{
    @Scripts.Render("~/bundles/jqueryval")


}

@using (Html.BeginForm("Report", "Members", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x => Model.Id)
    @Html.ValidationSummary(false)

    <fieldset>
        <legend>@ViewBag.Title</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Reason)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Reason)
            @Html.ValidationMessageFor(model => model.Reason)
        </div>

        <div class="submit-holder">
            <input type="submit" class="btn btn-large btn-success" value="@Html.LanguageString("Buttons.Send")" />
        </div>
    </fieldset>
}
