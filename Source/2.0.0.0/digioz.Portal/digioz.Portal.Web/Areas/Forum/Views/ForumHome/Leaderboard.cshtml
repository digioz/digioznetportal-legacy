@{
    ViewBag.Title = Html.LanguageString("Leaderboard.LeaderboardTitle");
}

@section side
{
    @Html.Action("ListCategorySideMenu", "Category")
    @Html.Action("SideSearch", "Search")
    @Html.Action("PopularTags", "Tag")
    @Html.Action("CurrentWeekHighPointUsers", "Point")
}

@section Header {
    @Scripts.Render("~/bundles/leaderboard")
}

<div class="row">    
    <div class="col-md-6 thisweeksstars">
        <h2>@Html.LanguageString("Leaderboard.ThisWeeksStars")</h2>
        
        <div class="leaderboardholders thisweekleaderboard">
            <span class="ajaxspinner" title="@Html.LanguageString("Ajax.PleaseWait")">@Html.LanguageString("Ajax.PleaseWait")</span>
        </div>

    </div>
    <div class="col-md-6 thisyearsstars">
        <h2>@Html.LanguageString("Leaderboard.ThisYearsStars")</h2>        
        <div class="leaderboardholders alltimeleaderboard">
            <span class="ajaxspinner" title="@Html.LanguageString("Ajax.PleaseWait")">@Html.LanguageString("Ajax.PleaseWait")</span>
        </div>
    </div>
</div>